<div class="text-center">	
	<h3><%= @user.full_name %>'s Profile</h3>

	<!-- <br> -->
	<!-- <br> -->

	<strong>Contact:</strong>
	<%= @user.email %>
</div>	

<br>
<br>

<% if @user.photo? %>
	<div class="col-md-4 col-lg-4">	
		<strong>Photo:</strong>
		<%= image_tag @user.photo.avatar.url %>
	</div>
<%end%>


<br>
<br>
<div id="user-about-me" class="text-center">
	<% if @profile%>

		<h3>About Me</h3>
		<br>

		<h5>Location</h5><%= @profile.location %><br><br>
		<h5>Objective</h5><%= @profile.objective %><br><br>
		<h5>Summary</h5><%= @profile.summary %><br><br>

		<br>
		<h3><%= link_to "Edit 'About Me' Section", edit_profile_path(@profile) %></h3>
	<% else %>
		<h3><%= link_to "Add 'About Me' Section", new_profile_path %></h3>
	<% end %>
</div>

<div class="text-center">
	<h3>Testimonials</h3>
	<% @user.evaluations.each do |eval|%>
		<p><%= eval.review %></p>
		<p><%= eval.author.full_name %></p>
	<% end %>
</div>
<br>

<div class="text-center">
	<h3>Links Section</h3>
	<ul>
	<% @links.each do |link| %>
		
		<li><%= link_to link.description, link.url %> </li>
	<% end%>
	</ul>
	<br>

	<h3><%= link_to "Add New Link", new_link_path %></h3>
<div>


	
<br>
<br>

<div class="text-center">
	<% if current_user.id != @user.id %>
		<h4>Evaluate this Dev:</h4>
		<%= simple_form_for :evaluation, url: user_evaluations_path(@user) do |f|%>
			<%= f.input :rating, label: 'Rating', collection: [1, 2, 3, 4, 5] %>
  		<%= f.input :review, label: 'Review', as: :text %>
  		<%= f.button :submit %>
		<% end %>
	<% end %>
</div>


