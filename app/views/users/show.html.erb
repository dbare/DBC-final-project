<body>
<br>
<div style="background-color: white;">

      
  <div class="row center" style="background-color: #6b7a8f;width: 80%;" id="user-evals">
      <div class="col s1">
        
      </div>
	     
	      	
	      <div class="col s10 center white-text">
	        <% if @user == current_user %>
	          <h1>Welcome Back, <%= @user.first_name.capitalize %>!</h1>

	        <% else %>
	          <h1><%= @user.full_name %></h1>
	        <% end %>
	      </div>

	      <div class="col s1 z-depth-3 white-text" id="user-evals" style="background-color: #dcc7aa; ">
	          <% if current_user.id == @user.id %>
	            <strong>Total Views <%= "#{@user.impressionist_count}" %></strong>
	          <% end %>
	      </div>
      


  </div>
  <div style="height: 5px;">
    <br>
  </div>



  <div style="background-color: #dcc7aa" id="user-evals">
  <br>
  <br>
      <div class="col s1">
      </div>
    <div class="col s5">
      <center>
        <div class="center-align z-depth-3" id="user-evals" style="background-color: #6b7a8f; width: 80%;">
          <div>
          <br>
            <% if @user.photo? %>
              <%= image_tag @user.photo.avatar.url %>
            <% else %>
              <img src="https://www.soundstream.tv/assets/default_profile-e08597880fc222202f22984a4f1966a29b108e856a3fb935072bfbbc302a4b73.png" height=300 width=300>
            <% end %>
          </div>
          <br>
          <center>
            <div class="z-depth-3" id="user-evals" style="background-color: white; width: 25%;">
              <strong>Email <%= @user.first_name.capitalize %></strong>
              <br>
              <small><em><%= @user.email %></em></small>
            </div>
          </center>
          <br>
        </div>
      </center>
        <br>
        <div class="center-align">
          <% if @user != current_user%>
            <div class="btn link"  id="media-link">
          <%= link_to 'Message me!', user_conversations_path(@user, sender_id: current_user.id, recipient_id: @user.id), method: 'post'%>
          <br>
            </div>
          <% end %>
        </div>
      </div>




    <div class="col s5 center" >
      <center>
        <div class="z-depth-5" id="user-evals" style="width: 80%; background: #6b7a8f;">
            <% if @profile %>
            <div class="row">
            <!-- add width -->
              <center>
              <br>
                <div id="user-evals" class="z-depth-5" style="background-color:white; width: 25%">
                  <h4><small>About Me</small></h4>
                </div>
                <br>
              </center>
            </div>
            <br>

            <div class="row center-align">
              <div class="col s1">
              </div>

              <div class="col s3 z-depth-3" id="user-evals" style="padding: 10px; background-color: white;">
                <h5>Summary</h5><em><%= @profile.summary %></em><br><br>
              </div>

              <div class="col s1">
              </div>

              <div class="col s2 z-depth-3" id="user-evals" style="padding: 10px; background-color: white;"><h5>Location</h5><i class="fa fa-map-marker" aria-hidden="true"></i> <em><%= @profile.location %></em><br><br>
              </div>

              <div class="col s1">
              </div>

              <div class="col s3 z-depth-3" id="user-evals" style="padding: 10px; background-color: white;">
                <h5>Objective</h5><em><%= @profile.objective %></em>
                <br>
              </div>


              <div class="col s1">
              </div>

            </div>
            <br>
            <% if @user == current_user && @user.profile %>
              <div class="btn button-color link">
                <a href="<%=edit_profile_path(@profile) %>" > <i class="fa fa-pencil" aria-hidden="true"></i> Edit 'About Me'</a>
              </div>
              <br>
            <% end %>
          <% elsif @user == current_user && @user.profile == nil%>
            <div class="btn link">
              <%= link_to "Add 'About Me'", new_profile_path %>
            </div>
          <% end %>
        <br>
        <br>
          <div class="user-evals z-depth-3" id="user-evals" style="width: 50%; background-color: white;">
            <br>
            <strong>Resume</strong>
            <p><%= flash[:notice] %></p>
            <% if !@user.resume %>
              <%= render 'resumes/form' %>
            <% else %>
              <div>
                <%= link_to "Display Resume", @resume1.content_url, class: " btn link button-color" %>
              </div>  
            <% end %>
            <br>
          </div>
          <br>
        </div>
      <center>
    </div>
    <br><br>
    <div class="col s1"></div>
  </div>



  <div class="center hoverable z-depth-1">
    <ul>
      <div class="carousel" style="background-color: #6b7a8f;" id="user-evals">
        <center>
          <div class="white-text">
            <h2 >Portfolio</h2>
          <div>
            <br>
            <br>
            <br>
        </center>
        <% @uploads.each do |upload| %>
          <div class="carousel-item card z-depth-5" >
            <div class="card-image hoverable">
              <img src="<%= upload.photo.avatar.url%>" height=250>
            </div>
            <div>
              <% if @user == current_user%>
                <div class="row">
                  <div>
                    <%= button_to "EDIT", edit_user_upload_path(@user, upload), method: :get, :class => "btn-floating button-color2 halfway-fab left edit-btn" %>
                  </div>

                  <div class="col s6 small">
                    <%= button_to "DELETE", user_upload_path(@user, upload), method: :delete, :class => "btn-floating button-color2 halfway-fab right delete-btn" %>
                  </div>

                </div>
              <%end%>
            </div>
          </div>

        <% end%>
      </div>
    </ul>
    <% if @user == current_user%>
      <div class="btn link" style="margin-bottom: 15px;" id="media-link">
        <%= link_to "Upload Portfolio Image", new_user_upload_path(@user) %>
        <br>
      </div>

    <% end %>

  </div>
  <!-- carousel ends here -->

<div style="height: 5px;">
  <br>
</div>

<div style="background-color: #dcc7aa">
<br>

  <div class="container" >
    <div class="row">
      <div   class="col s5 center-align z-depth-2" id="user-evals"  style="background-color: white;">
        <div class="z-depth-5" style="background-color: #6b7a8f; color:white;" id="user-evals">
          <h4><small>Testimonials</small></h4>
        </div>
          <% @user.evaluations.each do |eval|%>
          <br>
          <div>
            <div class="hoverable z-depth-2" id="user-evals">
              <p><em>"<%= eval.review %>"</em></p>
              <p><small>-<%= eval.author.full_name %></small></p>
            </div>

              <strong><p style="color: #6b7a8f;">- - - - - - - - - - - - - - - - - - - -</p></strong>

          </div>
          <% end %>
      </div>
      <div class="col s2">
      </div>
      <div class="col s5">
      <div>
        <div class="row z-depth-3 hoverable" id="user-evals" style="background-color: white;">
          <div class="center">

            <div class="z-depth-5" style="background-color: #6b7a8f; color: white;" id="user-evals">
              <h4><small>Media Links</small></h4>
            </div>
            <% if @user == current_user%>
            <br>
            <br>
              <div class="center-align btn button-color3">
                <a href=" <%=new_link_path %>">Add New Link</a>
              </div>
            <% end %>
          <br>


          <% if @user.links %>
            <ul>
              <div>
              <% @links.each do |link| %>
                <li>
                <div>
                  <div class="btn link center" id="media-link">
                    <%= link_to link.description, link.url %>
                  </div>
                  <% if @user == current_user%>
                    <div>
                      <div class="btn button-color3">
                        <%= link_to "Edit", edit_link_path(link) %>
                      </div>
                      <div class="btn button-color3">
                        <%= link_to "Delete", link_path(link), method: :delete %>
                      </div>
                    </div>
                  <% end%>
                </div>
                </li>
              <% end %>
              </div>
            </ul>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>




	<div>
	  <br>
	  <br>
	    <% if current_user == @user && @user.favorite_jobs.any?%>
	      <div class="text-center">
	      <h3>Favorite Jobs:</h3>
	      <% @user.favorite_jobs.each do |job| %>
	        <%= link_to "#{job.company.name} - #{job.position}" , job_path(job) %>
	      <% end %>
	        <br>
	        <br>
	        <br>
	      <% end %>
	    </div>
	  </div>

	<center>
	  <% if current_user.id != @user.id %>
	    <div style="background-color: white; width: 85%" id="user-evals" class="center z-depth-3">
	      <h3>Evaluate this Dev</h3>
	      <center>
	        <div style="width: 85%">
	          <%= simple_form_for :evaluation, url: user_evaluations_path(@user) do |f|%>
	            <%= f.input :rating, label: 'Rating', collection: [1, 2, 3, 4, 5] %>
	            <%= f.input :review, label: 'Review', as: :text %>
	            <br>
	            <%= f.button :submit, class: "btn button-color" %>
	            <br>
	          <% end %>
	        </div>
	      </center>
	    </div>
	  <% end %>
	</center>
	<br>
  
    





  <div style="background-color: white;" id="user-evals">
    <% if current_user.id == @user.id %>
    <br>

      <center>
        <div class="z-depth-5 white-text" id="user-evals" style="width: 50%; background-color: #6b7a8f;">
          <h3>Track Your Profile Views</h3>
        </div>
        <br>

      </center>
      <%= line_chart @impressions.group_by_day(:created_at, format: "%B %d, %Y").count, discrete: false %>

    <% end %>
  </div>
  <br>
</body>
