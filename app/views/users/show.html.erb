<div class="text-center">
	<h3><%= @user.full_name %>'s Profile</h3>

	<strong>Contact:</strong>
	<%= @user.email %>
</div>

<div>
	<h4>
		<% if current_user.id == @user.id %>
			<%= "Profile Views: #{@user.impressionist_count}" %>
		<% end %>
	</h4>
</div>

<br>
<br>

<% if @user.photo? %>
	<div class="col-md-4 col-lg-4">
		<strong>Photo:</strong>
		<%= image_tag @user.photo.avatar.url %>
	</div>
<%end%>


<% if current_user != @user %>
	<%= link_to 'Message me!', user_conversations_path(@user, sender_id: current_user.id, recipient_id: @user.id), method: 'post'%>
<% end %>

<br>
<br>

<br>
<br>

<div id="user-about-me" class="text-center">
	<% if @profile%>

	<h3>About Me</h3>

	<br>

	<h5>Location</h5><%= @profile.location %><br><br>
	<h5>Objective</h5><%= @profile.objective %><br><br>
	<h5>Summary</h5><%= @profile.summary %><br><br>

	<br>

	<h3><%= link_to "Edit 'About Me' Section", edit_profile_path(@profile) %></h3>
	<% else %>
	<h3><%= link_to "Add 'About Me' Section", new_profile_path %></h3>
	<% end %>
</div>

<div class="text-center">
	<h3>Testimonials</h3>
	<% @user.evaluations.each do |eval|%>
	<p><%= eval.review %></p>
	<p><%= eval.author.full_name %></p>
	<% end %>
</div>

<br>

<div>
	<p><%= flash[:notice] %></p>
	<h3>Resume</h3>
	<% if !@user.resume %>
		<%= render 'resumes/form' %>
	<% else %>
		<%= link_to "#{@user.first_name}'s Resume", user_resume_path(@user) %>
	<% end %>
</div>

<br>

<div class="text-center">
	<h3>Links Section</h3>
	<% if @user.links %>
		<ul>
		<% @links.each do |link| %>
			<li>
				<%= link_to link.description, link.url %>
				<% if @user == current_user%>
					<div>
						<button><%= link_to "Edit", edit_link_path(link) %></button>
					</div>
					<div>
						<button><%= link_to "Delete", link_path(link), method: :delete %></button>
					</div>
				<% end%>
			</li>
		<% end %>
		</ul>
	<% end %>

	<br>
	<% if @user == current_user%>
	<h3><%= link_to "Add New Link", new_link_path %></h3>
	<% end %>
		<div class="text-center">
			<h3>Portfolio</h3>
			<ul>
				<% @uploads.each do |upload| %>
					<li>
						<%= image_tag upload.photo.avatar.url %>
						<% if @user == current_user%>
							<div>
								<button><%= link_to "Edit", edit_user_upload_path(@user, upload) %></button>
							</div>
							<div>
								<button><%= link_to "Delete", user_upload_path(@user, upload), method: :delete %></button>
							</div>
						<%end%>
					</li>
				<% end%>
			</ul>

			<% if @user == current_user%>
				<h3><%= link_to "Upload Portfolio Image", new_user_upload_path(@user) %></h3>
			<% end %>
		</div>

<div>
		<br>
		<br>

		<div class="text-center">
			<% if current_user.id != @user.id %>
				<h4>Evaluate this Dev:</h4>
				<%= simple_form_for :evaluation, url: user_evaluations_path(@user) do |f|%>
					<%= f.input :rating, label: 'Rating', collection: [1, 2, 3, 4, 5] %>
					<%= f.input :review, label: 'Review', as: :text %>
					<%= f.button :submit %>
				<% end %>
			<% end %>
		</div>


		<% if current_user == @user && @user.favorite_jobs.any?%>
			<div class="text-center">
			<h3>Favorite Jobs:</h3>
				<% @user.favorite_jobs.each do |job| %>
					<%= link_to "#{job.company.name} - #{job.position}" , job_path(job) %>
				<% end %>
			</div>
		</div>

		<% end %>

		<br>
		<br>
