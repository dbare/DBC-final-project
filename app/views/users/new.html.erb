<div class= "container">
	<h1>Register</h1>
<div>
	<%= form_for @user, :html => { multipart: true, :class => "form-signin"} do |f| %>
	<div>
		<%= f.label :first_name %>
		<%= f.text_field :first_name , class: "form-control"%>
	</div>

	<div>
		<%= f.label :last_name %>
		<%= f.text_field :last_name,  class: "form-control" %>
	</div>
	
	<div>
		<%= f.label :email %>
		<%= f.email_field :email, class: "form-control" %>
	</div>

	<div>
		<%= f.label :password %>
		<%= f.password_field :password, class: "form-control" %>
	</div>

	<div>
		<label>Unique Token</label>
		<%= f.text_field :unique_token, class: "form-control" %>
	</div>

	<div>
		<label>Photo</label>
		<%= f.file_field :photo, class: "form-control" %>
	</div>

	<center>
		<div class=" ">
			<%= submit_tag "Register", :class => "btn"  %>
		</div>
		<br>
		<br>
	</center>

	<% end %>

</div>
</div>
