<%= simple_form_for @project do |f| %>
  <%= f.input :location, error: 'Location is a required field' %>
  <%= f.input :compensation, label: 'Compensation' %>
  <%= f.input :description, :as => :ckeditor, input_html: {:ckeditor => {:toolbar => 'FULL'}}, error: 'Description is a required field' %>
  <%= f.button :submit %>
<% end %>