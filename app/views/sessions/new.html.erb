<h1>Sign In</h1>
<div>

  <%= form_tag '/login', :class => "form-signin" do %>
    <hr>
    <label>Email:</label>
    <%= text_field_tag :email, nil, class: "form-control" %>

    <label>Password:</label>
    <%= password_field_tag :password, nil, class: "form-control"%>

    <%= submit_tag "Login", :class => "btn btn-lg btn-primary"  %>
  <% end %>
</div>
